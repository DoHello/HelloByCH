.pagination {
	position: absolute;
	text-align: center;
	left: 0;
	bottom: 0;
	width: 100%;
	line-height: 30px;
	height: 30px;
	z-index: 20;
	background:rgba(0,0,0,.3);
}
.swiper-pagination-switch {
	vertical-align: middle;
	display: inline-block;
	width: 13px;
	height: 13px;
	border-radius:50px;
	-moz-border-radius:50px;
	background:rgba(0,0,0,.3);
	cursor: pointer;
	-webkit-transition: 300ms;
	-moz-transition: 300ms;
	-ms-transition: 300ms;
	-o-transition: 300ms;
	transition: 300ms;
	margin: 0 2px;
}
.swiper-pagination-switch:first-child {
	
}
.swiper-pagination-switch:last-child {
	
}
.swiper-container {
	height: 100vw;
}


.swiper-pagination-bullet
{
	width: 14px;
	height: 14px;
	margin: 0 4px;
}

.swiper-pagination-bullet-active {
	background-color: rgb(0, 136, 183);
}

.swiper-slide .inner 
{
	width: 100%;
	height: 100%;
	overflow: hidden;
	text-align: center;
	background-position: 50% 0;
	-webkit-background-size: cover ;
	background-size: cover;
}
.swiper-slide .inner img {
	vertical-align: top;
	width: 100%;
	height: auto;
}
